{
    "compilerOptions": {
        "target": "es2017",
        "types": ["node", "jest"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "jsx": "react"
    },
    "compileOnSave": true,
    "include": ["."]
}
